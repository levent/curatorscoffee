<%= form_tag(sessions_path) do  %>
  <div class="row">
    <div class="large-4 columns">
      <label>Email</label>
      <%= text_field_tag :email %>
    </div>
  </div>
  <div class="row">
    <div class="large-4 columns">
      <label>Password</label>
      <%= password_field_tag :password %>
    </div>
  </div>
  <div class="row">
    <div class="large-4 columns">
      <%= submit_tag 'Login', :class => 'button' %>
    </div>
  </div>
<% end %>
