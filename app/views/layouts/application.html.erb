<!DOCTYPE html>
<!-- paulirish.com/2008/conditional-stylesheets-vs-css-hacks-answer-neither/ -->
<!--[if lt IE 7 ]> <html class="ie6" lang="en"> <![endif]-->
<!--[if IE 7 ]>    <html class="ie7" lang="en"> <![endif]-->
<!--[if IE 8 ]>    <html class="ie8" lang="en"> <![endif]-->
<!--[if (gte IE 9)|!(IE)]><!--> <html lang="en"> <!--<![endif]-->
<head>
	<meta charset="utf-8" />
	
	<!-- Uncomment to make IE8 render like IE7 -->
	<!-- <meta http-equiv="X-UA-Compatible" content="IE=7" /> -->
	
	<!-- Set the viewport width to device width for mobile -->
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	
	<title><%= content_for?(:title) ? yield(:title) : "Untitled" %></title>
  
	<!-- Included CSS Files -->
	<%= stylesheet_link_tag    "application" %>
	
	<!-- Included JS Files  -->
	<%= javascript_include_tag "application" %>
  
  <%= csrf_meta_tags %>
</head>
<body>
  <!-- Header and Nav -->

  <div class="row">
    <div class="three columns">
      <h1><%= image_tag "logo-studio-stamp.png", :class => 'cc-logo' %></h1>
    </div>
    <div class="nine columns">
      <dl class="tabs right">
        <dd class="active"><%= link_to "Our Drinks", coffee_path %></dd>
        <dd><%= link_to "Curators Creations", "#creations" %></dd>
        <dd><%= link_to "Design", "#design", :class => 'hide-for-small' %></dd>
      </dl>
    </div>
  </div>

  <div class="row">
    <div class="four columns">
      <%= render :partial => 'vcard' %>
      <%= link_to @map_url do %>
        <div id="map" style="width: 100%; height: 220px"></div>
      <% end %>
      <br>
    </div>
    <div class="eight columns">
      <div id="main-slides">
        <%= render :partial => 'slides' %>
      </div>
    </div>
  </div>

  <!-- End Header and Nav -->
  <%= yield %>

  <!-- Footer -->

  <footer class="row">
    <div class="twelve columns">
      <hr />
      <div class="row">
        <div class="four columns">
          <p>&copy; 2013 Curators Coffee</p>
        </div>
        <div class="eight columns">
          <ul class="inline-list right">
            <li><a href="http://maps.google.co.uk/maps?q=curators+coffee&amp;hl=en&amp;ll=51.512108,-0.082591&amp;spn=0.016279,0.036736&amp;sll=53.800651,-4.064941&amp;sspn=31.939111,75.234375&amp;hq=curators+coffee&amp;t=m&amp;z=16&amp;iwloc=A" class="dark adr">9a Cullum St London EC3M 7JJ</a></li>
            <li>Mon-Fri 7:30am-5:00pm</li>
            <li>020 7283 4642</li>
          </ul>
        </div>
      </div>
    </div>
  </footer>
  <script type="text/javascript" charset="utf-8">
    <%= yield :custom_js %>
  </script>
  <%= javascript_include_tag "footer" %>
</body>
</html>
