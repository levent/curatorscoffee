<!DOCTYPE html>
<!-- paulirish.com/2008/conditional-stylesheets-vs-css-hacks-answer-neither/ -->
<!--[if lt IE 7 ]> <html class="ie6" lang="en"> <![endif]-->
<!--[if IE 7 ]>    <html class="ie7" lang="en"> <![endif]-->
<!--[if IE 8 ]>    <html class="ie8" lang="en"> <![endif]-->
<!--[if (gte IE 9)|!(IE)]><!--> <html lang="en"> <!--<![endif]-->
<head>
  <meta charset="utf-8" />

  <!-- Uncomment to make IE8 render like IE7 -->
  <!-- <meta http-equiv="X-UA-Compatible" content="IE=7" /> -->

  <!-- Set the viewport width to device width for mobile -->
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />

  <title><%= content_for?(:title) ? "#{yield(:title)} - Curators Coffee" : "Curators Coffee" %></title>
  <meta name="description" content="Specialty coffees, teas and quality local food in the City of London">

  <!-- Included CSS Files -->
  <%= stylesheet_link_tag "application" %>

  <%= javascript_include_tag "vendor/modernizr" %>
  <%= csrf_meta_tags %>
  <script type="text/javascript" src="//use.typekit.net/mbu3uul.js"></script>
  <script type="text/javascript">try{Typekit.load();}catch(e){}</script>

  <script type="text/javascript">

    var _gaq = _gaq || [];
    _gaq.push(['_setAccount', 'UA-29743319-1']);
    _gaq.push(['_setDomainName', 'curatorscoffee.com']);
    _gaq.push(['_gat._anonymizeIp']);
    _gaq.push(['_trackPageview']);

    (function() {
      var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
      ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
      var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
    })();

  </script>
</head>

<body>
  <script>
    window.fbAsyncInit = function() {
      FB.init({
        appId      : '1594454537447073',
        xfbml      : true,
        version    : 'v2.0'
      });
    };

    (function(d, s, id) {
      var js, fjs = d.getElementsByTagName(s)[0];
      if (d.getElementById(id)) return;
      js = d.createElement(s); js.id = id;
      js.src = "//connect.facebook.net/en_GB/sdk.js#xfbml=1&appId=1594454537447073&version=v2.0";
      fjs.parentNode.insertBefore(js, fjs);
    }(document, 'script', 'facebook-jssdk'));
  </script>
  <div class="curators-menu">
    <div class="row">
      <div class="large-3 small-6 columns">
        <h1><%= link_to image_tag("logos/logo-studio-stamp-black.png", :class => 'cc-logo'), root_path %></h1>
      </div>
      <div class="large-9 small-6 columns">
        <%= link_to "Drink & Eat", food_drink_path, :class => "menu-link" %>
        <%= link_to "Catering", catering_path, :class => "menu-link" %>
        <%= link_to "Creations", creations_path, :class => "menu-link" %>
        <%= link_to "Classes", classes_path, :class => "menu-link" %>
        <%= link_to "Design", design_path, :class => "menu-link" %>
        <%= link_to "Locations", locations_path, class: 'menu-link' %>
      </div>
    </div>
  </div>

  <div class="body-container">
    <%= yield %>
  </div>

  <!-- Footer -->

  <%= render partial: 'partials/footer' %>

  <%= javascript_include_tag "application" %>

  <script type="text/javascript" charset="utf-8">
    <%= yield :custom_js %>
  </script>
</body>
</html>
